<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.numberniceic.ananya.numberniceic.fragments.tabian.TabianFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsCar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="9dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edPrimaryNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="4กฮ"
                                android:text="4กฮ"
                                android:textAlignment="textEnd"
                                android:textSize="36sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="45sp" />

                            <EditText
                                android:id="@+id/edSecondNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="4145"
                                android:text="4145"
                                android:textSize="36sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="กรุงเทพมหานคร"
                                android:textAlignment="center"

                                android:textSize="36sp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btnCalTabian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คำนวน" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="#e7e7e7"
                        android:paddingTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            app:cardBackgroundColor="#83a46a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvSumMTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:paddingStart="6dp"
                                    android:textColor="#FFF"
                                    android:background="#0d8e08"
                                    android:text="ผลรวมหมวด "
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tvSumM"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_toEndOf="@+id/tvSumMTitle"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginStart="3dp"
                                    android:text="x"
                                    android:textColor="#FFF"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#706e6e"
                            android:layout_marginStart="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginTop="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvSumLTitle"
                                    android:background="#863c02"
                                    android:paddingStart="6dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="#FFF"
                                    android:text="ผลรวมเลข "
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tvSumL"
                                    android:textColor="#FFF"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="6dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_toEndOf="@+id/tvSumLTitle"
                                    android:text="x"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/tlA"
                        android:background="#e7e7e7"
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pair1A"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"

                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair2A"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair1A"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair3A"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair2A"
                            android:background="@drawable/bg_pair_tabian"

                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/tlB"
                        android:background="#e7e7e7"

                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pair1B"

                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"

                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair2B"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair1B"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                               android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair3B"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair2B"
                            android:background="@drawable/bg_pair_tabian"

                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
