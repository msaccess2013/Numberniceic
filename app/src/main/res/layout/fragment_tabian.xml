<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.numberniceic.ananya.numberniceic.fragments.tabian.TabianFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsCar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--  Select Birth Day!-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#a7a7a7"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBirthDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:freezesText="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="..."
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnBirthTabian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#8e8d8d"
                        fancy:fb_focusColor="#9bd823"
                        fancy:fb_fontIconResource="&#xf08a;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="วันเกิด"
                        fancy:fb_textColor="#FFFFFF" />

                </FrameLayout>
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="9dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edPrimaryNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="4กฮ"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:text="4กฮ"
                                android:textAlignment="textEnd"
                                android:textSize="36sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="45sp" />

                            <EditText
                                android:id="@+id/edSecondNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="4145"
                                android:inputType="number"
                                android:maxLength="4"
                                android:maxLines="1"
                                android:text="4145"
                                android:textSize="36sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvProvince"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="กรุงเทพมหานคร"
                                android:textAlignment="center"

                                android:textSize="36sp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnClearTabian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#8e8d8d"
                    fancy:fb_focusColor="#9bd823"
                    fancy:fb_fontIconResource="&#xf096;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="ล้าง"
                    fancy:fb_textColor="#FFFFFF" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnMiracleTabian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toEndOf="@+id/btnClearTabian"
                    android:paddingBottom="10dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#8d6c91"
                    fancy:fb_focusColor="#9bd823"
                    fancy:fb_fontIconResource="&#xf06e;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="ทำนาย"
                    fancy:fb_textColor="#FFFFFF" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnCalTabian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="3dp"
                    android:layout_toEndOf="@+id/btnMiracleTabian"
                    android:paddingBottom="10dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#7ab800"
                    fancy:fb_focusColor="#9bd823"
                    fancy:fb_fontIconResource="&#xf0d1;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="คำนวณ"
                    fancy:fb_textColor="#FFFFFF" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvKalakiniTitle"

                        android:layout_weight="1"
                        android:background="#706c6c"
                        android:textColor="#FFF"
                        android:text="อักษรกาลกิณี"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvKalakini"
                        android:layout_weight=".5"
                        android:text="..."
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f4ffcb">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#076e05">

                                <ImageView
                                    android:id="@+id/imgd"
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:src="@drawable/miracle_d" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_toEndOf="@id/imgd"
                                    android:padding="3dp"
                                    android:text="คะแนนดี"
                                    android:textColor="#FFF"
                                    android:textSize="13sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvScrollTabianD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="3dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f4ffcb">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#076e05">

                                <ImageView
                                    android:id="@+id/imgdp"
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:src="@drawable/miracle_d" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/imgdp"

                                    android:padding="3dp"
                                    android:text="% แม่นดี"
                                    android:textColor="#FFF"
                                    android:textSize="13sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvPercentTabianD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="3dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#ede3e3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#494949"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/imgr"
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="1dp"
                                    android:src="@drawable/miracle_r" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toEndOf="@id/imgr"

                                    android:padding="1dp"
                                    android:text="คะแนนร้าย"
                                    android:textColor="#FFF"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvScrollTabianR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="3dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#ede3e3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#494949">

                                <ImageView
                                    android:id="@+id/imgrp"
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:src="@drawable/miracle_r" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/imgrp"

                                    android:padding="3dp"
                                    android:text="% แม่นร้าย"
                                    android:textColor="#FFF"
                                    android:textSize="13sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvPercentTabianR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="3dp"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e7e7e7"
                        android:orientation="horizontal"
                        android:paddingTop="3dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:paddingEnd="9dp"
                            android:paddingStart="0dp"
                            app:cardBackgroundColor="#83a46a">

                            <RelativeLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvSumMTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="0dp"
                                    android:background="#0d8e08"
                                    android:paddingStart="6dp"
                                    android:text="ผลรวมหมวด "
                                    android:textColor="#FFF"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tvSumM"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_toEndOf="@+id/tvSumMTitle"
                                    android:text="x"
                                    android:textColor="#FFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="2dp"
                            android:paddingEnd="9dp"
                            android:paddingStart="0dp"
                            app:cardBackgroundColor="#706e6e">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvSumLTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#863c02"
                                    android:paddingStart="6dp"
                                    android:text="ผลรวมเลข "
                                    android:textColor="#FFF"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tvSumL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_toEndOf="@+id/tvSumLTitle"
                                    android:text="x"
                                    android:textColor="#FFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/tlA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e7e7e7"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/pairSM"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="SM"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair1A"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pairSM"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair2A"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair1A"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair3A"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair2A"
                            android:background="@drawable/bg_pair_tabian"

                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/tlB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e7e7e7"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp">

                        <TextView
                            android:id="@+id/pairSL"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="SL"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pairKN"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@id/pairSL"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="KN"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair1B"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@id/pairKN"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair2B"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair1B"
                            android:background="@drawable/bg_pair_tabian"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pair3B"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="6dp"
                            android:layout_toEndOf="@+id/pair2B"
                            android:background="@drawable/bg_pair_tabian"

                            android:gravity="center_horizontal|center_vertical"

                            android:text="x"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/provinceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
