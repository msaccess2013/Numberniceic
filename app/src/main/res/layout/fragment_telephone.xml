<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mlns="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.numberniceic.ananya.numberniceic.fragments.Telephone.TelephoneFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvTelephone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="กรุณากรอกหมายเลขโทรศัพท์"
                android:background="#cac9c7"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/rlPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
                <EditText
                    android:id="@+id/phone_number"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@color/black"
                    android:enabled="true"
                    android:inputType="numberSigned"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:hint="090000000"
                    android:textAlignment="center"
                    android:textColor="@color/oracece"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btn_ok"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/phone_number"
                    android:text="คลิ๊กดูผลการทำนาย"
                    android:background="#d4d4d3"
                    android:textSize="19dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--
                สรุปผลดี่ร้าย อิทธีพลของตัวเลข
                -->
                <include layout="@layout/layout_summary_report" />
            </LinearLayout>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_sum_pair"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#fbfcfb">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="#361818"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                    <TextView
                        android:id="@+id/titlePairSum"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="#eef2ed"
                        android:text="คู่ผลรวม"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/ppnPairSum"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/pilot_selector_green"
                        android:freezesText="true"
                        android:gravity="center"
                        android:text="s"
                        android:layout_marginBottom="9dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />



                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titlePairMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:text="จับคู่หลัก [A]"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#082101"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="9dp"
                        android:background="@android:color/darker_gray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:gravity="center_horizontal">


                        <TextView
                            android:id="@+id/ppnPair02"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/ppnPair01"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="a2"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ppnPair03"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/ppnPair02"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="a3"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ppnPair04"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/ppnPair03"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="a4"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/ppnPair05"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/ppnPair04"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="a5"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ppnPair01"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="25dp"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="a1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="6dp"
                        android:text="* จับคู่หลัก 5 คู่ดีร้ายตามสี" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_b"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titlePairMain_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:text="จับคู่รอง [B]"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#0e3904"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="9dp"
                        android:background="@android:color/darker_gray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:gravity="center_horizontal">


                        <TextView
                            android:id="@+id/ppnPair01B"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="b1"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/ppnPair02B"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="9dp"
                            android:layout_toEndOf="@+id/ppnPair01B"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="b2"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ppnPair03B"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="9dp"
                            android:layout_toEndOf="@+id/ppnPair02B"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="b3"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ppnPair04B"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="9dp"
                            android:layout_toEndOf="@+id/ppnPair03B"
                            android:background="@drawable/bg_green"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="b4"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="6dp"
                        android:text="* จับคู่สลับ 4 คู่ดีร้ายตามสี" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/conD"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#dffcc7"
                    card_view:cardCornerRadius="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleConD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="6dp"
                            android:text="xดี"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="9dp"
                            android:background="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tvConD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:freezesText="true"
                            android:text="x"
                            android:textColor="#35ba05"
                            android:textSize="36sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/conR"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="#f7d6d6"
                    card_view:cardCornerRadius="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/titleConR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="6dp"
                            android:text="xร้าย"
                            android:textSize="18dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="9dp"
                            android:background="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tvConR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:freezesText="true"
                            android:text="x"
                            android:textColor="#f53868"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_reset"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
